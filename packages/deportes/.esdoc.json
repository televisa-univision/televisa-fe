{
  "source": "./src",
  "destination": "./docs",
  "includes": ["\\.js$"],
  "excludes": ["\\.spec.js$"],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {"enable": false},
        "coverage": {"enable": true},
        "accessor": {"access": ["public", "protected", "private"], "autoPrivate": true},
        "undocumentIdentifier": {"enable": true},
        "unexportedIdentifier": {"enable": false},
        "typeInference": {"enable": true},
        "brand": {
          "title": "Univision FE Deportes",
          "description": "Univision Deportes Front End",
          "repository": "github.com/univision/univision-fe-deportes",
          "site": "http://univision.com/deportes",
          "author": "Univision"
        },
        "manual": {
          "index": "./docs/index.md",
          "globalIndex": true,
          "files": [
            "./docs/overview.md"
          ]
        }
      }
    },
    {
      "name": "esdoc-jsx-plugin",
      "option": {
        "enable": true
      }
    },
    {"name": "esdoc-ecmascript-proposal-plugin",
     "option": {
       "all": true
     }
    }
  ]
}
